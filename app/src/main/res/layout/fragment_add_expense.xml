<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- ===== TITRE PAGE ===== -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ajouter une dÃ©pense"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- ===== TITRE DEPENSE ===== -->
        <EditText
            android:id="@+id/etTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Titre de la dÃ©pense"
            android:inputType="text"
            android:minHeight="56dp"
            android:padding="16dp"
            android:background="@drawable/edittext_modern_focused"
            android:textColor="#FFFFFF"
            android:textColorHint="#888888"
            android:textSize="16sp"
            android:elevation="2dp" />

        <!-- ===== MONTANT ===== -->
        <EditText
            android:id="@+id/etAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Montant (DT)"
            android:inputType="numberDecimal"
            android:minHeight="56dp"
            android:padding="16dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/edittext_modern_focused"
            android:textColor="#FFFFFF"
            android:textColorHint="#888888"
            android:textSize="16sp"
            android:elevation="2dp" />

        <!-- ===== IMAGE DU REÃ‡U ===== -->
        <ImageView
            android:id="@+id/imgReceipt"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop"
            android:contentDescription="Image du reÃ§u"
            android:background="@drawable/imageview_rounded"
            android:src="@mipmap/ic_launcher"
            android:padding="4dp"
            android:elevation="4dp" />

        <!-- ===== PRENDRE PHOTO ===== -->
        <Button
            android:id="@+id/btnTakePhoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“· Prendre une photo"
            android:layout_marginTop="12dp"
            android:minHeight="56dp"
            android:background="@drawable/button_primary_pressed"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:letterSpacing="0.05"
            android:elevation="4dp" />

        <!-- ===== ANALYSE IA ===== -->
        <Button
            android:id="@+id/btnAnalyzeReceipt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ§  Analyser le reÃ§u (IA)"
            android:layout_marginTop="12dp"
            android:minHeight="56dp"
            android:background="@drawable/button_secondary"
            android:textColor="#B15CFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:letterSpacing="0.05"
            android:elevation="4dp" />

        <!-- ===== ENREGISTRER ===== -->
        <Button
            android:id="@+id/btnSaveExpense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="âœ… Enregistrer la dÃ©pense"
            android:layout_marginTop="20dp"
            android:minHeight="56dp"
            android:background="@drawable/button_primary_pressed"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:letterSpacing="0.05"
            android:elevation="6dp" />

    </LinearLayout>

</ScrollView>
